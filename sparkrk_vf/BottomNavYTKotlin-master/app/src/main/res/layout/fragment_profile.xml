<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/peopleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number of People"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/roomsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number of Rooms"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Target Limits" />

    <TextView
        android:id="@+id/totalLimitsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Target Monthly Limits:"
        android:textSize="18sp" />

</LinearLayout>
